<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>controller.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/project/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>RequestLogFilter</filter-name>
        <filter-class>filters.RequestsLogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestLogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>/pages/welcome.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <location>/pages/errors/dao-error.jsp</location>
        <exception-type>exceptions.db.DaoException</exception-type>
    </error-page>
    <error-page>
        <location>/pages/errors/generic-error.jsp</location>
        <exception-type>java.lang.Throwable</exception-type>
    </error-page>
</web-app>